<!DOCTYPE html>
<!--金融业代布局页-->
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1,user-scalable=no">
    <meta name="renderer" content="webkit">
    <title>@ViewBag.Title</title>
    <link href="http://cdn.bootcss.com/font-awesome/4.6.3/css/font-awesome.css" rel="stylesheet">
    <!--<link rel="stylesheet" href="//g.alicdn.com/msui/sm/0.6.2/css/sm.css">-->
    <link rel="stylesheet" href="/_R/css/sui.css">
    <link href="http://cdn.bootcss.com/Swiper/3.3.1/css/swiper.min.css" rel="stylesheet">
    <link href="/_R/css/main.css" rel="stylesheet">
</head>
<body class="page">
    <!-- page集合的容器，里面放多个平行的.page，其他.page作为内联页面由路由控制展示 -->
        <!-- 标题栏 -->
        <header class="bar bar-nav theme-dark">
            <a class="icon icon-left pull-left back color-white"></a>
            <h1 class="title">@ViewBag.Title</h1>
        </header>
        <!-- 工具栏 -->
        <nav class="bar bar-tab">
            <a class="tab-item external active" href="#">
                <span class="icon icon-home"></span>
                <span class="tab-label">首页</span>
            </a>
            <a class="tab-item external" href="#">
                <span class="icon icon-edit"></span>
                <span class="tab-label">录入资料</span>
            </a>
            <a class="tab-item external" href="#">
                <span class="icon icon-search"></span>
                <span class="tab-label">审查核实</span>
            </a>
            <a class="tab-item external" href="#">
                <span class="icon icon-me"></span>
                <span class="tab-label">个人中心</span>
                <span class="badge">2</span>
            </a>
        </nav>
        <!-- 这里是页面内容区 -->
        <div class="content">
            @RenderBody()
        </div>

    <!-- popup, panel 等放在这里 -->
    <div class="panel-overlay"></div>
    <!-- Left Panel with Reveal effect -->
    <div class="panel panel-left panel-reveal">
        <div class="content-block">
            <p>这是一个侧栏</p>
            <p></p>
            <!-- Click on link with "close-panel" class will close panel -->
            <p><a href="#" class="close-panel">关闭</a></p>
        </div>
    </div>

    <!--<script src='//g.alicdn.com/sj/lib/zepto/zepto.js' charset='utf-8'></script>-->
    <!--<script src='//g.alicdn.com/msui/sm/0.6.2/js/sm.js' charset='utf-8'></script>-->
    <!--<script src="http://cdn.bootcss.com/knockout/3.4.0/knockout-debug.js"></script>-->
    <script src="/_R/js/lib/zepto.js"></script>
    <script src="/_R/js/lib/sm.js"></script>
    <script src="/_R/js/lib/knockout-3.4.0.js"></script>
    <script src="http://cdn.bootcss.com/Swiper/3.3.1/js/swiper.min.js"></script>
    <script src="/_R/js/app.js"></script>

    @RenderSection("scripts", required: false)
    <!-- 默认必须要执行$.init(),实际业务里一般不会在HTML文档里执行，通常是在业务页面代码的最后执行 -->
    <script>$.init()</script>


</body>
</html>

