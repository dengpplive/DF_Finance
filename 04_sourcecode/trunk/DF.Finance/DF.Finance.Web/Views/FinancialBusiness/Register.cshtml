    <!--<script src="http://cdn.bootcss.com/knockout/3.4.0/knockout-debug.js"></script>-->
    <script src="~/_R/js/lib/zepto.js"></script>
    <script src="~/_R/js/lib/sm.js"></script>
    <script src="~/_R/js/lib/knockout-3.4.0.js"></script>
    <script src="http://cdn.bootcss.com/Swiper/3.3.1/js/swiper.min.js"></script>
    <script src="~/_R/js/app.js"></script>



</body>
</html>


