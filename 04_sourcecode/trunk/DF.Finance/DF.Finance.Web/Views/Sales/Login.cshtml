@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_SalesLayout.cshtml";
}

<!-- 这里是页面内容区 -->
<h3 class="text-center">欢迎回来</h3>
<div class="list-block">
    <ul>
        <!-- Text inputs -->
        <li>
            <div class="item-content">
                <div class="item-media"><i class="icon icon-form-password"></i></div>
                <div class="item-inner">
                    <div class="item-title label">
                        <img src="/_R/images/icon/phone.jpg" style="width: 1.5rem"
                             alt="phone icon">
                    </div>
                    <div class="item-input">
                        <input type="number" data-bind="value:phone" placeholder="请输入您的手机号码" class="color-white width-full">
                    </div>
                </div>
            </div>
        </li>

        <li>
            <div class="item-content">
                <div class="item-media"><i class="icon icon-form-password"></i></div>
                <div class="item-inner">
                    <div class="item-title label">
                        <img src="/_R/images/icon/lock.jpg" style="width: 1.5rem"
                             alt="lock icon">
                    </div>
                    <div class="item-input">
                        <input type="text" data-bind="value:pwd" placeholder="请输入您的六位密码" class="color-white width-full">
                    </div>
                </div>
            </div>
        </li>

    </ul>
</div>
<div class="content-block">
    <p><a href="javascript:void(0)" data-bind="click:submit" style="background-color: #898BFF" class="button button-fill button-big">登录 </a></p>
    <label class="label-checkbox color-content">
        <i class="fa fa-square-o" aria-hidden="true"></i>
        <!--<i class="fa fa-check-square-o" aria-hidden="true"></i>-->
        <input style="font-size: large" type="checkbox">
        记住密码
    </label>
    <a href="signin" class="button-link pull-right color-content" title="注册">马上注册</a>
</div>
@section Scripts{
    <script>
        ko.applyBindings(new SalesLoginViewModel());
    </script>
}

     


