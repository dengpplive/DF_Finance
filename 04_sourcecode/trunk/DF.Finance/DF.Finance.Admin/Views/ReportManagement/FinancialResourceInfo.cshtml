@{
    ViewBag.Title = "FinancialResourceInfo";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@section css
{
    <link href="~/_R/css/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet">
}
@section js
{
    <script src="~/_R/js/plugins/bootstrap-table/bootstrap-table.min.js"></script>
    <script src="~/_R/js/plugins/bootstrap-table/bootstrap-table-mobile.min.js"></script>
    <script src="~/_R/js/plugins/bootstrap-table/locale/bootstrap-table-zh-CN.min.js"></script>
    <!-- excel导出插件 -->
    <script src="~/_R/js/plugins/export/bootstrap-table-export.min.js"></script>
    <script src="~/_R/js/plugins/export/tableExport.js"></script>
}
@section scripts
{
    <script type="text/javascript">
        $(function () {
            //1.初始化Table
            var oTableObj = DFCommon.TableInit("#formSearch");
            oTableObj.Init({              
                showExport: true,//显示导出按钮
                exportDataType: "selected",//选择的列导出
                exportTypes: ['excel']//导出类型
            });
        });
    </script>
}
<div class="panel-body" style="padding:0px;margin:5px;">
    <div class="panel panel-default">
        <div class="panel-heading">查询条件</div>
        <div class="panel-body">
            <form id="formSearch" class="form-horizontal" method="post" action="@Url.Action("GetFinancialResourceList", "ReportManagement")" data-query="#btn_query" data-table="#tb_ReportManagement">
                <div class="form-group">
                    <label class="control-label col-sm-2">金融业代姓名</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" name="username">
                    </div>
                    <label class="control-label col-sm-1">公司名称</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" name="companyname">
                    </div>

                    <label class="control-label col-sm-1">联系电话</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" name="companyphone">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">公司地址</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" name="companyaddress">
                    </div>
                    <label class="control-label col-sm-1">联系人</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" name="contacts">
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-1"></div>
                    <div class="col-sm-1">
                        <input type="hidden" name="state" value="0" />
                        <button type="button" id="btn_query" class="btn btn-primary">查询</button>
                    </div>
                </div>
            </form>
        </div>
    </div>



    <table id="tb_ReportManagement">
        <thead>
            <tr>
                <th data-field="UserName" data-halign="center" data-align="center">金融业代姓名</th>
                <th data-field="CompanyName" data-halign="center" data-align="center">公司名称</th>
                <th data-field="Address" data-halign="center" data-align="center">公司地址</th>
                <th data-field="CompanyPhone" data-halign="center" data-align="center">公司联系电话</th>
                <th data-field="Contacts" data-halign="center" data-align="center">联系人</th>
            </tr>
        </thead>
    </table>
</div>


